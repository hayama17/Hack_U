<Window x:Class="CS.TimeLine" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:CS" mc:Ignorable="d" Title="TimeLine" Height="420" Width="500">
    <DataGrid x:Name="TimeLineTable" Grid.Row="1" ColumnWidth="70" RowHeight="50" AlternatingRowBackground="Cyan" SelectionMode="Single" Focusable="True" IsReadOnly="True" SelectionUnit="Cell" ItemsSource="{Binding}" EnableColumnVirtualization="True" EnableRowVirtualization="True" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling" Margin="10,4,10,10" MouseDoubleClick="MouseDoubleClicked" MouseEnter="MouseEntered" MouseLeave="MouseLeaved">
        <DataGrid.Resources><!-- 選択中セルの背景色（フォーカス有りの時） -->
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="gray"/><!-- 選択中セルの文字色（フォーカス有りの時） -->
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/><!-- 選択中セルの背景色（フォーカス無しの時） -->
            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="cyan"/><!-- 選択中セルの文字色（フォーカス無しの時） -->
            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
        </DataGrid.Resources>
    </DataGrid>
</Window>